   <children>
      <ImageView fitHeight="600.0" fitWidth="794.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../telasGUI/atualizarNome.png" />
         </image>
      </ImageView>
      <Label fx:id="labelCpf" layoutX="130.0" layoutY="258.0" text="CPF:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="cpf" layoutX="276.0" layoutY="256.0" prefHeight="25.0" prefWidth="392.0" promptText="Apenas números (11 dígitos)" />
      <Label fx:id="labelNovoNome" layoutX="131.0" layoutY="329.0" text="Novo nome:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="novoNome" layoutX="276.0" layoutY="327.0" prefHeight="25.0" prefWidth="392.0" promptText="Insira o novo nome" />
